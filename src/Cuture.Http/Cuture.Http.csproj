<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../Common.props" />

  <PropertyGroup>
    <Platforms>AnyCPU</Platforms>
    <NoWarn>CA1062;CA1200;CA1303;CA1054;CA2234</NoWarn>

